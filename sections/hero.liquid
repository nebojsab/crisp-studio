<section class="hero">
    <div class="hero--cta">
        <div class="hero--logo">{{ 'logo-color.png' | asset_url | img_tag }}</div>
        <a class="hero--link" href="#">Beauty and the piste
            <span>{{ 'yellow-arrow.svg' | asset_url | img_tag }}</span></a>
    </div>
    <img class="hero--img" src="{{settings.hero_img | img_url: '1920x'}}" width="100%">
</section>
<section class="yellow--bar">
    {% if settings.yellow_bar != blank %}
        <span>{{settings.yellow_bar}}</span>
    {% endif %}
</section>