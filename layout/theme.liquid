<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  {% if template == 'index' %}
    <title>{{ shop.name }} | {{ page_title }}</title>
  {% elsif template == '404' %}
    <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
    <title>{{ page_title }} | {{ shop.name }}</title>
  {% endif %}

  {% if page_description %}
    <meta name="description" content="{{ page_description }}" />
  {% endif %}

  {{ content_for_header }}

  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width" />

  {{ 'styles.scss' | asset_url | stylesheet_tag }}

</head>
<body>
  {% section 'header' %}
  {% section 'hero' %}
  <h1 class="section--title"><span>New in</span></h1>
  {% section 'carousel' %}
  {{ content_for_layout }}
  <h1 class="section--title"><span>Best sellers</span></h1>
  {% section 'bestsellers' %}
  {% section 'footer' %}

  {{ 'sticky.js' | asset_url | script_tag }}
  {{ 'carousel.js' | asset_url | script_tag }}
  <script src="../assets/carousel.js"></script>
  <script>
    function chooseFav() {
      var favIcon = document.querySelector(".fav--icon");
      favIcon.classList.toggle("fav--icon-solid");
      console.log("Kliknuo...!!!")
    }
  </script>
</body>
</html>
