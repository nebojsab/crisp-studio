<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  {% if template == 'index' %}
  <title>{{ shop.name }} | {{ page_title }}</title>
  {% elsif template == '404' %}
  <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
  <title>{{ page_title }} | {{ shop.name }}</title>
  {% endif %}

  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}

  {{ content_for_header }}

  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width" />
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  {{ 'styles.scss' | asset_url | stylesheet_tag }}

</head>

<body>
  {% section 'header' %}
  {% section 'hero' %}
  <h1 class="section--title"><span>New in</span></h1>
  {% section 'carousel' %}
  {{ content_for_layout }}
  {% section "crispcollections" %}
  <h1 class="section--title"><span>Best sellers</span></h1>
  {% section 'bestsellers' %}
  {% section "instagram" %}
  {% section 'footer' %}

  {{ 'header.js' | asset_url | script_tag }}
  {{ 'carousel.js' | asset_url | script_tag }}
  <script src="../assets/carousel.js"></script>
  <script>
    function classToggle() {
      this.classList.toggle('is-clicked');
      this.classList.toggle('');
    }
    document.querySelector('#nav--toggle').addEventListener('click', classToggle);
  </script>
  <script>
    // Get a list of all svg elements
    icons = document.querySelectorAll('.icon--fav');

    // Cycle through list
    for (let i = 0; i < icons.length; i++) {
      icons[i].addEventListener('click', function (event) {
        event.preventDefault();

        let icon = this;
        let currentClass = icon.getAttribute('class'); // The starting class

        console.log(icon);

        if (currentClass.indexOf('solid') > -1) {
          // Remove .active
          icon.setAttribute('class', currentClass.replace(' solid', ''));
        } else {
          // Add .active
          icon.setAttribute('class', currentClass + ' solid');
        }
      }, false);
    }
  </script>
</body>

</html>